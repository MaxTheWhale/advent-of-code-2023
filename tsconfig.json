{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "NodeNext",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "verbatimModuleSyntax": true,
    "allowJs": false
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*"]
}
